<%= render "shared/errors", obj: @novel %>

<div class= "row">
  <div class="col-md-12">
<%#= form_for  @novel, local: true do |form| %>
    <%= form_with(model:@novel ,local: true, :html => {class: "form-horizontal", role: "form"})  do |form| %>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= form.label :name %><br>
        </div>
        <div class="col-sm-10">
          <%= form.text_field :name ,class: "form-control", placeholder: "Name"%>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= form.label :publisher %><br>
        </div>
        <div class="col-sm-10">
          <%= form.text_field :publisher , rows:10 ,class: "form-control", placeholder: "Publisher"%>
        </div>
      </div>

       <div class="form-group">
              <div class="control-label col-sm-2">
                <%= form.label :description %><br>
              </div>
              <div class="col-sm-10">
                <%= form.text_area :description ,rows:10, class: "form-control", placeholder: "Description"%>
              </div>
            </div>


<!-- <div class="form-group">-->
<!--   <div class="control-label col-sm-2">-->
<!--   <%#= form.label :price %><br>-->
<!--           </div>-->
<!--           <div class="col-sm-10">-->
   <%#= form.text_field :price , class: "form-control", placeholder: "Price"%>
<!--           </div>-->
<!--         </div>-->

       <div class="form-group">
              <div class="control-label col-sm-2">
                <%= form.label :image %><br>
              </div>
              <div class="col-sm-10">
                <%= form.file_field :image , class: "form-control"%>
              </div>
            </div>


      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= form.submit  class: "btn btn-primary btn-lg" %>
        </div>
      </div>

      <div class=" col-xs-4 col-xs-offset-4">
        [ <%= link_to "Back", novels_path %> ]
      </div>


    <% end %>
  </div>
</div>